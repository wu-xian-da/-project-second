<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jianfei.ps.dao.system.RolesDao">
	
	<resultMap id="roleMap" type="com.jianfei.ps.entity.system.Roles">
		<id property="id" column="id" />
		<result property="rolename" column="role_name" />
		<collection column="id" property="users" ofType="string" select="findUserByRoleId"/>
	</resultMap>
	
	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
		insert into sys_roles (role_name,counts) values (#{rolename},#{counts})
	</insert>
	
	<update id="update">
		update sys_roles set 
		role_name = #{rolename},
		counts = #{counts} 
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from sys_roles where id = #{id}
	</delete>
	
	<select id="findById" resultType="com.jianfei.ps.entity.system.Roles">
		select * from sys_roles where id = #{id}
	</select>
	
	<select id="findAll" resultType="com.jianfei.ps.entity.system.Roles">
		select * from sys_roles r
		ORDER BY r.id asc
	</select>
	
	<select id="findUserByRoleId" resultType="string">
		select nickname from sys_users where role_id = #{id}
	</select>
	
	<select id="findCondition" resultType="com.jianfei.ps.entity.system.Roles">
		select r.id,r.role_name from sys_roles r 
		where 1=1
		<if test="rolename != null and rolename != '' ">and r.role_name like CONCAT ('%',#{rolename},'%')</if>
		ORDER BY r.id asc
	</select>
	
	<select id="findRolesByRolename" resultType="com.jianfei.ps.entity.system.Roles">
		select * from sys_roles where role_name = #{rolename}
	</select>
</mapper>